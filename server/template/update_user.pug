extends include/layout.pug

block content
    h1 Update User 

    form(method='POST')
        label(for="first_name") First Name
        input#first_name(type="text", placeholder="Enter first name" name="first_name", value=first_name required)
        br
        label(for="last_name") Last Name
        input#last_name(type="text", placeholder="Enter last name" name="last_name", value=last_name required)
        br
        label(for="address") Address
        input#address(type="text", placeholder="Enter Address" name="address", value=address  required)
        br
        label(for="position") Position
        input#position(type="text", placeholder="Enter Position" name="position", value=position required)
        br
        button(type="submit") Update User
